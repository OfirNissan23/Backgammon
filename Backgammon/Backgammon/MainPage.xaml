<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Backgammon.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Backgammon.Models"
    xmlns:vm="clr-namespace:Backgammon.ViewModels"
    Title="MainPage"
    x:DataType="vm:MainPageVM"
    NavigationPage.HasNavigationBar="False">
    <Border Style="{StaticResource Board}">

        <Grid ColumnDefinitions="*,*,*,*,*,*,10,*,*,*,*,*,*" RowDefinitions="*,*">
            <Polygon Grid.Row="0" Grid.Column="0" Style="{StaticResource TriangleOddUp}" />
            <Polygon Grid.Row="0" Grid.Column="1" Style="{StaticResource TriangleEvenUp}" />
            <Polygon Grid.Row="0" Grid.Column="2" Style="{StaticResource TriangleOddUp}" />
            <Polygon Grid.Row="0" Grid.Column="3" Style="{StaticResource TriangleEvenUp}" />
            <Polygon Grid.Row="0" Grid.Column="4" Style="{StaticResource TriangleOddUp}" />
            <Polygon Grid.Row="0" Grid.Column="5" Style="{StaticResource TriangleEvenUp}" />
            <!--  Half  -->
            <BoxView Grid.Row="0" Grid.RowSpan="2" Grid.Column="6" Style="{StaticResource Half}" />
            <!--  Half  -->
            <Polygon Grid.Row="0" Grid.Column="7" Style="{StaticResource TriangleOddUp}" />
            <Polygon Grid.Row="0" Grid.Column="8" Style="{StaticResource TriangleEvenUp}" />
            <Polygon Grid.Row="0" Grid.Column="9" Style="{StaticResource TriangleOddUp}" />
            <Polygon  Grid.Row="0" Grid.Column="10" Style="{StaticResource TriangleEvenUp}" />
            <Polygon Grid.Row="0" Grid.Column="11" Style="{StaticResource TriangleOddUp}" />
            <Polygon Grid.Row="0" Grid.Column="12" Style="{StaticResource TriangleEvenUp}" />
            <!--  Down Triangles  -->
            <Polygon Grid.Row="1" Grid.Column="0" Style="{StaticResource TriangleOddDown}" />
            <Polygon Grid.Row="1" Grid.Column="1" Style="{StaticResource TriangleEvenDown}" />
            <Polygon Grid.Row="1" Grid.Column="2" Style="{StaticResource TriangleOddDown}" />
            <Polygon Grid.Row="1" Grid.Column="3" Style="{StaticResource TriangleEvenDown}" />
            <Polygon Grid.Row="1" Grid.Column="4" Style="{StaticResource TriangleOddDown}" />
            <Polygon Grid.Row="1" Grid.Column="5" Style="{StaticResource TriangleEvenDown}" />
            <Polygon Grid.Row="1" Grid.Column="7" Style="{StaticResource TriangleOddDown}" />
            <Polygon Grid.Row="1"  Grid.Column="8" Style="{StaticResource TriangleEvenDown}" />
            <Polygon Grid.Row="1" Grid.Column="9" Style="{StaticResource TriangleOddDown}" />
            <Polygon Grid.Row="1"  Grid.Column="10" Style="{StaticResource TriangleEvenDown}" />
            <Polygon Grid.Row="1" Grid.Column="11" Style="{StaticResource TriangleOddDown}" />
            <Polygon Grid.Row="1" Grid.Column="12" Style="{StaticResource TriangleEvenDown}" />
            <!--  Up Soldiers  -->
            <Grid Grid.Row="0" Grid.Column="0" RowDefinitions="Auto,Auto">
                <Frame Grid.Row="0">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="1">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="5" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                <Frame Grid.Row="0">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="1">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="2">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="3">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="4">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="8" RowDefinitions="Auto,Auto,Auto">
                <Frame Grid.Row="0">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="1">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="2">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
            </Grid>
            <Grid  Grid.Row="0" Grid.Column="12" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                <Frame Grid.Row="0">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="1">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="2">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="3">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="4">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
            </Grid>
            <!--  Down Soldiers  -->
            <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto,Auto" VerticalOptions="End">
                <Frame Grid.Row="0">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="1">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
            </Grid>
            <Grid Grid.Row="1"  Grid.Column="5" RowDefinitions="Auto,Auto,Auto,Auto,Auto" VerticalOptions="End">
                <Frame Grid.Row="0">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="1">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="2">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="3">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="4">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
            </Grid>
            <Grid  Grid.Row="1" Grid.Column="8" RowDefinitions="Auto,Auto,Auto" VerticalOptions="End">
                <Frame Grid.Row="0">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="1">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
                <Frame Grid.Row="2">
                    <BoxView Style="{StaticResource WhiteSoldiers}" />
                </Frame>
            </Grid>
            <Grid Grid.Row="1"  Grid.Column="12"  RowDefinitions="Auto,Auto,Auto,Auto,Auto" VerticalOptions="End">
                <Frame Grid.Row="0">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="1">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="2">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="3">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
                <Frame Grid.Row="4">
                    <BoxView Style="{StaticResource BlackSoldiers}" />
                </Frame>
            </Grid>
        </Grid>
    </Border>
</ContentPage>
