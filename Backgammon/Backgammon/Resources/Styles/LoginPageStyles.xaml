<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Backgammon.Resources.Styles.LoginPageStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="LoginStack" TargetType="VerticalStackLayout">
        <Setter Property="Spacing" Value="10" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="Shadow" Value="True" />
    </Style>
    <Style x:Key="LoginIcons" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="FontFamily" Value="MaterialIcons"/>
        <Setter Property="FontSize" Value="24"/> 
    </Style>
    <Style x:Key ="SaveMeButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="FontFamily" Value="MaterialIcons"/>
        <Setter Property="FontSize" Value="24"/>
    </Style>
    <Style x:Key ="LoginFrame" TargetType="Frame">
        <Setter Property="BorderColor" Value="black" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="WidthRequest" Value="350" />
        <Setter Property="HeightRequest" Value="485" />
        <Setter Property="CornerRadius" Value="20" />
    </Style>
    <Style x:Key="LoginBorder" TargetType="Border">
        <Setter Property="Stroke" Value="black" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="10" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="LoginEntry" TargetType="Entry">
        <Setter Property="HorizontalTextAlignment" Value="End" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="15" />
    </Style>
    <Style x:Key="LoginButton" TargetType="Button">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BackgroundColor" Value="#007bff" />
    </Style>
    <Style x:Key="LoginLabel" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>
    <Style x:Key="SaveMe" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="TextColor" Value="Red" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="10" />
    </Style>
    <Style x:Key="DontHaveAccount" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="TextColor" Value="Blue" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="10" />
    </Style>
    <Style x:Key="LoginNavigateButton" TargetType="Button">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BackgroundColor" Value="#A3D5FF" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
</ResourceDictionary>